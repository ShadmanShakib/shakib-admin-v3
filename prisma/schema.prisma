generator client {
  provider = "prisma-client-js"
}

datasource db {
   provider = "mongodb"
   url      = env("MONGODB_URI")
}

model ProductNews{
    id                   String @id @default(auto()) @map("_id") @db.ObjectId
    title                String
    body                 String
    product_url          String
    start_publish_date   DateTime
    end_publish_date     DateTime
    created_at           DateTime   @default(now())
    updated_at           DateTime   @updatedAt

}

model News {
  id                              String @id @default(auto()) @map("_id") @db.ObjectId
  title                           String
  content                         String
  type                            String
  user_email                      String
  start_publish_date_time         DateTime
  end_publish_date_time           DateTime
  pinned_news                     Boolean  @default(false)
  target                          String
  created_at                      DateTime @default(now())
}

model Messages {
  id                           String @id @default(auto()) @map("_id") @db.ObjectId
  title                        String
  message                      String
  seen                         Boolean @default(false)
  to                           String  
  replies                      Replies []  
  created_by                   String
  role                         String?
  avatar                       String?
  created_at                   DateTime @default(now())

}

model Replies {
      id                      String   @id @default(auto()) @map("_id") @db.ObjectId
      messages                Messages  @relation(fields: [messageId], references: [id] , onDelete: Cascade)
      messageId               String @db.ObjectId
      message                 String
      seen                    Boolean  @default(false)
      role                    String?
      avatar                  String?
      created_by              String
      created_at              DateTime @default(now())
      updated_at              DateTime @updatedAt
}



model hot_products {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  url                String
  image              String
  coupon             Float
  campaignid         String?
 
}

model campaigns {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  name                       String
  en_name                    String?
  short_description          String?
  url                        String?
  en_short_description       String?
  logourl                    String?
  commissionsdetails         String
  accountid                  Json?
  status                     String
  type                       String
  dateinserted               String
  weight                     Int?
  platform                   String?
  coupons_only               Json?
  countries_served           String []
  advertisement_url          String?
  public_notes               String?
  en_public_notes            String?
  homepage_active            Int?
  created_at                 String  
  updated_at                 String
  warnings                  Warning []
  coupons                   Coupon []
  
}

model merchants {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  firstName             String
  lastName              String
  email                 String
  phone                String?
  country              String?
  city                 String []
  countriesServed      String []
  storeName            String?
  url                  String?
  
}

type Warning {
  en       String
  ar       String
}

type Coupon {
  code     String
  type     String
  value    String?
  note     String?
  en_note  String?
}